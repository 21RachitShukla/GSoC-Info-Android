<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/bg_mountain_test"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/org_detail_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start"
                android:layout_weight="2"
                android:padding="8dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/org_detail_desc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:padding="8dp"
                android:textColor="@color/white"
                android:textSize="16dp"
                tools:text="FOSSASIA ORGANIZATION\nDetails\nand\nstuff" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/techTagRecyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background_card"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:id="@+id/org_detail_title"
                    style="@style/Title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    tools:text="This is a multi line desription of the organization" />

                <TextView
                    android:id="@+id/org_detail_details"
                    style="@style/Subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    tools:text="This is a \n verry \n very long description of the\n organization \n which you mp \n won't event be \n reading" />

            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>